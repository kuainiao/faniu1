/* pages/case/aboutchildren.wxss */
page{
  background-color: #f2f2f2;
}
.formbox{
  padding-bottom: 50rpx;
}
picker{
  border-bottom: 1px solid #dcdcdc;
}
textarea{
  width: 100%;
  height: 300rpx;
  padding: 14rpx;
  border: 1px solid #dcdcdc;
  box-sizing: border-box;
}
input{
  display: block;
  height: 40px;
}
.arrow_right{
  position: relative;
}
.arrow_right::after{
  content: '';
  display: block;
  position: absolute;
  top: 50%;
  right: 30rpx;
  width: 10px;
  height: 10px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  transform: rotate(45deg) translateY(-50%);
}