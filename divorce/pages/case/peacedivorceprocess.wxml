<!--pages/case/peacedivorceprocess.wxml-->
<view class='p_lr_20 line_h40 color_6 font_14'>请根据你的个人情况，填写以下信息：</view>
<form bindsubmit='formSubmit'>
  <view class='formbox bg_f'>
    <view class="p_lr_36 section">
      <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
        <view class="picker line_h40 font_14 color_3 arrow_right">
          恋爱时间: {{time}}
        </view>
      </picker>
    </view>
    <view class="p_lr_36 section mb_20">
      <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
        <view class="picker line_h40 font_14 color_3 arrow_right">
          登记结婚时间: {{time}}
        </view>
      </picker>
    </view>
    <view class="p_lr_36 section mb_20">
      <textarea class='font_14 color_3' placeholder='请输入小孩出生时间和协议扶养方案（含探视）'></textarea>
    </view>
    <view class="p_lr_36 section mb_20">
      <textarea class='font_14 color_3' placeholder='请描述夫妻共有财产状况和协议分割情况'></textarea>
    </view>
    <view class="p_lr_36 section line_h40 font_14 color_3">
      <view class='border_b_dc flex'>
        <view>手机号码：</view>
      <input type='text' placeholder='请输入' class='flex_1'></input>
      </view>
    </view>
  </view>
  <view class="section mt_50 mb_50">
    <button formType="submit" class="bg_theme color_f">提交</button>
  </view>
</form>