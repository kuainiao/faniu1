/* pages/ask/post.wxss */
@import '../template/widget/footer.wxss';
@import '../template/block/lawyer_header.wxss';
/* 头部广告 */
.release_ad{padding-top:15px;padding-left:20px;height:60px;font-size:12px;line-height:22px}
.release_ad view:first-child{color:#fff}
.release_ad view:last-child{display:inline-block;padding:0 8px;background:#ffb512;color:#fff;font-weight:700}
.release_ad text{color:#fff}

/* 步骤提示 */
.release_tips{position:relative;padding-top:20px}
.release_cc{float:left;width:33.33%;color:#ffb512;text-align:center;font-weight:700;font-size:12px}
.release_cc text{display:block;margin:5px auto 0;width:22px;height:22px;border-radius:11px;background:#ffb512;color:#fff;text-align:center;line-height:22px}
.release_line{position:absolute;bottom:11px;z-index:-1;width:100%;border-bottom:2px solid #ffb512;display:block;}