page{
  height: 100%;
}
.container{
  height: 100%;
}
map{
  width: 100%;
  height: 100%;
}
.tabs{
  position: fixed;
  top: 16rpx;
  z-index: 10;
  display: flex;
  width: 100%;
  height: 70rpx;
  padding: 0 54rpx;
  box-sizing: border-box;
}
.tab{
  flex:1;
  height: 70rpx;
  color: #fff;
  text-align: center;
}
.tab1{
  margin-right: 10rpx;
  background-color: #000;
  position: relative;
}
.tab2{
  margin-left: 10rpx;
  background-color: #ffb512;
  position: relative;
}

.tab .img{
  width: 60rpx;
  height: 38rpx;
  position: absolute;
  top:50%;
  left:5%;
  margin-top: -19rpx;
  z-index: 10;
}
.tab .txt{
  display: inline-block;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 16px;
}