/* pages/moreLawyer/moreLawyer.wxss */
page{
  background-color: #f4f4f4;
}
.container{
  background-color: #f4f4f4;
}
.tabs{
  display: flex;
  height: 70rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  z-index: 10;
  margin-top: 16rpx;
}
.tab{
  line-height: 70rpx;
  flex: 1;
  text-align: center;
  color:#fff;
}
.tab1{
  background-color: #000;
}
.tab2{
  background-color: #ffb512;
  position: relative;
}
.select_box{
  position: absolute;
  z-index: 10;
  top:50px;
  left:0;
  right: 0;
  width: 100%;
  height: 300px;
  color:#000;
  background-color: #fff;
  box-sizing: border-box;
}
.select_box text{
  display: block;
  height: 40px;
  line-height: 40px;
  border-left: 1px solid #c9c9c9;
  border-right: 1px solid #c9c9c9;
  border-bottom: 1px solid #c9c9c9;
}
.select_box text.active{
  background-color: orange;
}
.tab i{
  display: inline-block;
  vertical-align: middle;
  border-top:18rpx solid #fff;
  border-left:18rpx solid transparent;
  border-right: 18rpx solid transparent;
  border-bottom: none;
  margin-left: 15rpx;
}
.tab2 i{
  border-top: 18rpx solid #fff;
}
.list{
  padding: 102rpx 16rpx;
  box-sizing: border-box;
}
.item{
  margin-bottom: 16rpx;
  display: flex;
  border: 1px solid #c9c9c9;
  box-sizing: border-box;
  padding: 30rpx 20rpx;
  background-color: #fff;
}
.item_l{
  width: 60rpx;
  margin-right: 16rpx;
}
.item_l image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.item_r{
  flex: 1;
  position: relative;
}
.tohere{
  position: absolute;
  top: 0;
  right: 0;
  z-index: 9;
  border: 1px solid #ff7260;
  color: #ff7260;
  font-size: 10px;
  width: 140rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
}
.btn_box{
  margin-top:10rpx;
}
.btn_box .btn{
  display: inline-block;
  width: 196rpx;
  height: 56rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 4px;
  color:#fff;
}
.btn_box .btn1{
  margin-right: 20rpx;
}
.btn_box .btn image{
  display: inline-block;
  width: 28rpx;
  height:28rpx;
  vertical-align: middle;
  margin-right: 6rpx;
}
.mask{
  position: fixed;
  top: 60px;
  left: 0;
  right: 0;
  background-color: transparent;
  z-index: 9;
  width: 100%;
  height: 100%;
}
.vvip{
  width: 80rpx;
  height: 30rpx;
}