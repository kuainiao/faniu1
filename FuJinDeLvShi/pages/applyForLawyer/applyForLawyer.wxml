  <!--body开始-->
  <view class="apply_box">
    <view class="apply_img">
      <image class="img" src="../../img/joinlawyer.png"></image>
    </view>
    <view class="apply_btn" bindtap='gotoClaim'>我是律师，申请入驻</view>
  </view>
  <view class="text_center color_9 font_12 margin_b_20">
    <view>
      <text>技术支持：法妞问答</text>
    </view>
    <view>
      <text>客服热线：4006-188-116</text>
