  <!--弹窗开始-->
  <view class="mask {{maskShow}}">
    <view class="mask_container">
      <view class="close" bindtap="closeMask">X</view>
      <view>
        <image class="img"></image>
      </view>
      <view class="form_box">
        <view class="row"><input type="text" placeholder='请输入您的名字'/></view>
        <view class="row"><input type="number" placeholder='请输入您的联系电话'/></view>
        <view class="row">
          <view class="btn">立即申请</view>
        </view>
      </view>
      <view class="tip color_red font_12 margin_b_20">*提交申请后,我们的客服人员会及时与您取得联系,请耐心等待。</view>
      <view class="text_center color_3 font_14">您还可以拨打我们的客服热线</view>
      <view class="text_center color_3 font_14">0531-88803703</view>
    </view>
