/* pages/claim/claim.wxss */
page{
  background-color: #f4f4f4;
}
.container{
  padding: 0 20rpx;
}
.title{
  margin-bottom: 40rpx;
}
.title text{
  font-size: 14px;
  border-bottom:3px solid #ffb512;
}
.form_box{
  padding: 20rpx;
  background-color: #fff;
  font-size: 12px;
  margin-bottom: 50rpx;
}
.form_box .row{
  display: flex;
  margin-bottom:20rpx;
}
.form_box .row .key{
  width: 72px;
  height: 30px;
  line-height: 30px;
}
.form_box .row .value{
  flex: 1;
  height: 30px;
  line-height: 30px;
}
.form_box .row .value input{
  height: 30px;
  padding-left: 8px;
  border:1px solid #c9c9c9;
}
.form_box .row .value_address{
  flex: 1;
  display: flex;
}
.form_box .row .value_address picker{
  flex: 1;
  height: 30px;
  border: 1px solid #c9c9c9;
  box-sizing: border-box;
  position: relative;
}
.form_box .row .value_address .picker1,
.form_box .row .value_address .picker2{
  margin-right: 20rpx;
}
.form_box .row .value_address view{
  width: 100%;
  height: 30px;
  line-height: 30px;
  text-align: center;
}
.form_box .row .value_address i{
  display: block;
  width: 16rpx;
  height: 16rpx;
  border-right: 1px solid #666;
  border-bottom: 1px solid #666;
  transform: rotate(45deg);
  position: absolute;
  top: 50%;
  right: 6px;
  margin-top: -8rpx;
  z-index: 10;
}
.form_box .row .value_checkbox{
  flex: 1;
}
.form_box .row .value_checkbox .txt{
  height: 30px;
  line-height: 30px;
}
.form_box .row .value_checkbox checkbox{
  /*margin-right: 10rpx;*/
}
.form_box .row .value_checkbox label{
  display: inline-block;
  height: 30px;
  line-height: 30px;
  margin-right: 20rpx;
}
.form_box .row .value_textarea{
  flex: 1;
  height: 80px;
}
.form_box .value_image{
  flex: 1;
}
.form_box .choose_image{
  display: inline-block;
  padding: 2px 6px;
  height: 30px;
  line-height: 30px;
  margin-bottom: 20rpx;
}
.form_box .row .value_textarea textarea{
  width: 100%;
  height: 80px;
  padding: 10rpx;
  border: 1px solid #c9c9c9;
  box-sizing: border-box;
}
.form_box .row .value_btn{
  flex: 1;
  text-align: center;
}
.form_box .row .btn{
  width: 300rpx;
  height: 30px;
  line-height: 30px;
  background-color: #ffb512;
  color: #000;
  font-size: 16px;
  text-align: center;
  margin: 0 auto;
}
.upDownImg_success{
  position: fixed;
  top: 50%;
  left: 50%;
  width: 100px;
  height: 30px;
  margin-left: -15px;
  margin-top: -50px;
  line-height: 30px;
  background-color: rgba(0,0,0,0.5);
  z-index: 10;
  color: #fff;
  font-size: 14px;
  text-align: center;
}
.imgSrc{
  width: 50px;
  height: 50px;
  margin-bottom: 20rpx;
}