/* pages/chooseProvince/chooseProvince.wxss */
.container{
  background-color: #f6f6f6;
}
.search_box{
  padding: 16rpx 30rpx;
  position: relative;
}
.search_row{
  display: flex;
  position: relative;
}
.search_row image{
  width: 20rpx;
  height: 20rpx;
  display: inline-block;
  border: 1px solid red;
  vertical-align: middle;
  margin-right: 10rpx;
  position: absolute;
  top: 50%;
  left: 20rpx;
  margin-top: -10rpx;
  z-index: 10;
}
.search_cancel{
  font-size: 14px;
  height: 64rpx;
  line-height: 64rpx;
}
.search_input{
  flex: 1;
  background-color: #fff;
  font-size: 14px;
  padding: 0 20rpx 0 50rpx;
  height: 64rpx;
  margin-right: 10rpx;
  border: 1px solid #e5e5e6;
  box-sizing: border-box;
  border-radius: 6rpx;
}
.search_mask{
  color: #9b9b9b;
  font-size: 14px;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  position: absolute;
  top: 16rpx;
  left: 30rpx;
  right: 30rpx;
  background-color: #fff;
  z-index: 10;
  border: 1px solid #e5e5e6;
  box-sizing: border-box;
  border-radius: 6rpx;
}
.search_mask image{
  width: 20rpx;
  height: 20rpx;
  display: inline-block;
  border: 1px solid red;
  vertical-align: middle;
  margin-right: 10rpx;
}
.txt{
  color: #999;
  padding: 0 30rpx;
  height: 64rpx;
  line-height: 64rpx;
  /*margin-top: 20rpx;*/
  font-size: 12px;
}
.position{
  background-color: #fff;
  border-top: 1px solid #e5e5e6;
  border-bottom: 1px solid #e5e5e6;
  padding: 0 30rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 16px;
  color: #000;
}
.position image{
  width: 20rpx;
  height: 20rpx;
  display: inline-block;
  border: 1px solid red;
  vertical-align: middle;
  margin-right: 20rpx;
}
.used_city{
  display: flex;
  height: 96rpx;
  line-height: 96rpx;
  border-top: 1px solid #e5e5e6;
  border-bottom: 1px solid #e5e5e6;
  font-size: 16px;
}
.used_city .city{
  flex: 1;
  text-align: center;
  background-color: #fff;
}
.used_city .city1{
  border-right: 1px solid #e5e5e6;
}
.list{
  background-color: #fff;
  border-top: 1px solid #e5e5e6;
  border-bottom: 1px solid #e5e5e6;
  padding-left: 30rpx;
  font-size: 16px;
}
.item{
  height: 96rpx;
  line-height: 96rpx;
  border-bottom: 1px solid #e5e5e6;
  position: relative;
}
.item::after{
  content: "";
  display: block;
  width: 20rpx;
  height: 20rpx;
  border-top: 2px solid #c7c7cc;
  border-right: 2px solid #c7c7cc;
  position: absolute;
  top: 50%;
  right: 30rpx;
  margin-left: -10rpx;
  margin-top: -10rpx;
  transform: rotate(45deg);
}
.item:last-child{
  border-bottom: none;
}
.search_txt{
  height: 96rpx;
  line-height: 96rpx;
  border-top: 1px solid #e5e5e6;
  border-bottom: 1px solid #e5e5e6;
  font-size: 16px;
  padding: 0 30rpx;
}