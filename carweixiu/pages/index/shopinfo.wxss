/* pages/index/shopinfo.wxss */
.shopinfo_banner{
  display: block;
  width: 100%;
  height: 150rpx;
}
.logo{
  display: block;
  width: 166rpx;
  height: 166rpx;
  border: 2px solid #fff;
  border-radius: 50%;
  margin-top: -83rpx;
  margin-bottom: 20rpx;
  margin-left: auto;
  margin-right: auto;
}
.tab{
  position: relative;
}
.tab.color_theme::after{
  content: "";
  display: block;
  width: 0;
  height: 0;
  border-top: none;
  border-left: 4px solid transparent;
  border-right: 4px solid transparent;
  border-bottom: 6px solid #f42c2c;
  margin: 3px auto 0;
}